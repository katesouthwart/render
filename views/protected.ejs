<div class="container">
  <div class="row">
    <div class="col-12 col-lg-9 mx-auto mb-5">
      <div class="header-img col-12">
        <img src="/uploads/<%=viewedUser.headerPicture %>" onerror="this.onerror=null; this.src='/uploads/flame header.png';" class="img-fluid header-img" alt="<%= viewedUser.username %>" loading="lazy">
      </div>

      <div class="row">


        <div class="col-8">
          <div class="profile-picture">
            <img src="/uploads/<%=viewedUser.profilePicture %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid profile-picture" alt="<%= viewedUser.username %>" loading="lazy">
          </div>
        </div>

        <div class="col-4 d-flex justify-content-end pt-4 pe-5">
          <form id="followForm" action="/users/<%= viewedUser._id %>/follow" method="post">
            <button id="followButton" class="follow-button btn btn-lg <%= viewedUser.alreadyFollowed ? 'btn-outline-primary followed' : (viewedUser.alreadyRequested ? 'btn-outline-primary requested' : 'btn-primary') %>" data-user-id="<%= viewedUser._id %>" data-already-followed="<%= viewedUser.alreadyFollowed %>" data-already-requested="<%= viewedUser.alreadyRequested %>" type="submit" name="followBtn">
              <%= viewedUser.alreadyFollowed ? 'Following' : (viewedUser.alreadyRequested ? 'Requested' : 'Follow') %>
            </button>
          </form>
        </div>

      </div>

      <div class="ps-5 profile-info">
        <div class="">
          <h1 class="col-12"> <%= viewedUser.username %> </h1>
          <p class="col-12 mb-2"> <%= viewedUser.desc %> </p>
          <p class="text-secondary">Joined <%= viewedUser.formattedJoinedAt %></p>
        </div>

        <div class="d-flex">

          <div class="pe-4">
            <p class="private-profile-followers"><span class="fw-bold"><%= viewedUser.following.length %></span> Following</p>
          </div>
          <div class="">
            <p class="private-profile-followers"><span class="fw-bold"><%= viewedUser.followers.length %></span> Followers</p>
          </div>

        </div>

      </div>

      <div class="row py-5 border-top border-light-subtle" id="posts-container">
        <h3 class="text-center">This user's posts are protected.</h3>
        <p class="text-secondary text-center">Request to follow <%= viewedUser.username %> to view their posts.</p>
      </div>

    </div>
  </div>
</div>
