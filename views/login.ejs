<div class="d-flex mt-5">

  <div class="col-12 col-md-6 col-lg-4 col-xl-3 leftSide container mx-auto">
      <div class="d-flex col-10 flex-wrap mx-auto auth-container">
        <h3 class="mt-5 heading-white-bg">Log in to your account</h3>
        <div class="h-100 align-items-end d-flex">
          <p class="mb-0 pe-2">Don't have an account?</p>
          <a href="/auth/register" class="form-label profile-followers fw-normal mb-0">Sign up</a>
        </div>


        <div class="card col-12 my-4">
          <div class="card-body mx-auto py-2">
            <a class="btn btn-block" href="/auth/google" role="button">
              <i class="fab fa-google fa-lg pe-2"></i>
              Google
            </a>
          </div>
        </div>

        <div class="col-12 d-flex h-100 align-items-center mb-3">
          <div class="col-2 ps-1">
            <hr>
          </div>
          <div class="col-8">
            <p class="text-secondary text-center mb-0 login-text"> Or with email and password</p>
          </div>
          <div class="col-2 pe-1">
            <hr>
          </div>
        </div>

        <div class="d-flex col-12">
          <div class="col-12">
            <div class="card">
              <div class="card-body">

                <form action="/auth/login" method="POST">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control mb-1" id="email" name="email">
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary mt-3">Login</button>
                </form>

              </div>
            </div>
          </div>

      </div>

      <div class="col-12 d-flex align-items-center my-4">
        <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#forgot-password-modal">Forgot Password</button>

        <div class="modal fade" id="forgot-password-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header d-flex flex-wrap">
                <div class="d-flex col-12 justify-content-end">
                  <button type="button" class="close x-btn" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                  </button>
                </div>
                <div class="col-12 mx-auto justify-content-center d-flex">
                    <h5 class="modal-title fw-bold login-text" id="modal-title">Forgotten your password?</h5>
                </div>
              </div>
              <div class="modal-body mb-4 text-center">
                <p class="text-secondary text-center">Render is in beta and does not yet have automated password reset functionality. Please contact us directly.</p>
                <a href="mailto:rendersocialapp@gmail.com" class="profile-followers">rendersocialapp@gmail.com</a>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

  <div class="col-0 col-md-9">
    <div class="rightSide">

    </div>
  </div>

</div>
