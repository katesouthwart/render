<div class="px-4 pt-5 pb-3 text-center">
  <h3 class="display-6 fw-bold heading-white-bg">Discovery Settings</h3>
  <div class="col-lg-6 mx-auto mb-3">

    <% if (user && user.isPrivate) { %>
          <p class="lead mb-2">To be discoverable, you must have a public profile.</p>
          <a class="profile-followers" href="/users/<%=user.id%>/settings">Manage privacy settings.</a>
    <% } else { %>
          <p class="lead">Get discovered by users around the world!</p>
    <% } %>

  </div>
</div>

<div class="row justify-content-center mb-5">
  <div class="col-10 col-md-8 col-lg-6  col-xxl-5">

    <form action="/discover/<%=user.id%>/settings" enctype="multipart/form-data" method="post">

      <div class="d-flex flex-wrap col-12 mb-3">

        <div class="col-4 mb-2 mb-md-5 d-flex justify-content-start">
          <label for="img1">
            <img id="img_1" src="/uploads/<%= card.img1 %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid discover-settings-picture"
              alt="<%= user.username %>" loading="lazy">
          </label>
          <input type="file" class="d-none" id="img1" name="img1" accept="image/*" onchange="document.getElementById('img_1').src = window.URL.createObjectURL(this.files[0])">
        </div>

        <div class="col-4 mb-2 mb-md-5 d-flex justify-content-center">
          <label for="img2">
            <img id="img_2" src="/uploads/<%= card.img2 %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid discover-settings-picture"
              alt="<%= user.username %>" loading="lazy">
          </label>
          <input type="file" class="d-none" id="img2" name="img2" accept="image/*" onchange="document.getElementById('img_2').src = window.URL.createObjectURL(this.files[0])">
        </div>

        <div class="col-4 mb-2 mb-md-5 d-flex justify-content-end">
          <label for="img3">
            <img id="img_3" src="/uploads/<%= card.img3 %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid discover-settings-picture"
              alt="<%= user.username %>" loading="lazy">
          </label>
          <input type="file" class="d-none" id="img3" name="img3" accept="image/*" onchange="document.getElementById('img_3').src = window.URL.createObjectURL(this.files[0])">
        </div>

        <div class="col-4 mb-2 mb-md-5 d-flex justify-content-start">
          <label for="img4">
            <img id="img_4" src="/uploads/<%= card.img4 %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid discover-settings-picture"
              alt="<%= user.username %>" loading="lazy">
          </label>
          <input type="file" class="d-none" id="img4" name="img4" accept="image/*" onchange="document.getElementById('img_4').src = window.URL.createObjectURL(this.files[0])">
        </div>

        <div class="col-4 mb-2 mb-md-5 d-flex justify-content-center">
          <label for="img5">
            <img id="img_5" src="/uploads/<%= card.img5 %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid discover-settings-picture"
              alt="<%= user.username %>" loading="lazy">
          </label>
          <input type="file" class="d-none" id="img5" name="img5" accept="image/*" onchange="document.getElementById('img_5').src = window.URL.createObjectURL(this.files[0])">
        </div>

        <div class="col-4 mb-2 mb-md-5 d-flex justify-content-end">
          <label for="img6">
            <img id="img_6" src="/uploads/<%= card.img6 %>" onerror="this.onerror=null; this.src='/uploads/flame.PNG';" class="img-fluid discover-settings-picture"
              alt="<%= user.username %>" loading="lazy">
          </label>
          <input type="file" class="d-none" id="img6" name="img6" accept="image/*" onchange="document.getElementById('img_6').src = window.URL.createObjectURL(this.files[0])">
        </div>

      </div>

      <div class="col-12 mb-3">
        <label for="desc" class="form-label">Description</label>
        <textarea name="desc" class="form-control" rows="4" cols="30" maxlength="300" id="desc" placeholder="Tell other users a little about yourself and your food."><%= card.desc %></textarea>
      </div>

      <div class="col-12">
        <label class="form-label mb-1" for="category">Specialized Diet?</label>
        <p class="text-secondary mb-2">If we don't have your diet yet, contact us and let us know!</p>
        <select class="form-select form-control" name="diet" aria-label="Diet" required>
          <option selected>Select an option</option>

          <option value="No Limits" <%= card.diet === "No Limits" ? "selected" : "" %>>No Limits</option>
          <option value="Vegetarian" <%= card.diet === "Vegetarian" ? "selected" : "" %>>Vegetarian</option>
          <option value="Vegan" <%= card.diet === "Vegan" ? "selected" : "" %>>Vegan</option>
          <option value="Pescatarian" <%= card.diet === "Pescatarian" ? "selected" : "" %>>Pescatarian</option>
          <option value="Kosher" <%= card.diet === "Kosher" ? "selected" : "" %>>Kosher</option>
          <option value="Halal" <%= card.diet === "Halal" ? "selected" : "" %>>Halal</option>
        </select>
      </div>

      <div class="col-12 text-center my-5 pb-5">
        <button type="submit" class="btn btn-primary form-submit-btn" name="button">Save Changes</button>
      </div>

    </form>

  </div>
</div>
