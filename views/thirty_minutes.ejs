<div class="container">
  <h1 class="pb-4 mt-4 mb-2">Ready in 30 Minutes or Less</h1>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb mt-3">
      <li class="breadcrumb-item"><a href="/explore">Explore</a></li>
      <li class="breadcrumb-item active" aria-current="page">Thirty Minutes or Lesst</li>
    </ol>
  </nav>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-2 g-lg-3 mb-4 py-4">

      <% if (posts != "") { %>
        <% posts.forEach(function(recipe, index){ %>

          <a href="/posts/<%= recipe._id %>" class="col text-center recipe-title-directory">
            <div class="explore-img latest-img">
              <img src="/uploads/<%= recipe.img %>" alt="<%= recipe.title %>" loading="lazy">
            </div>
          <div class="pt-1"><%= recipe.title %></div>
          </a>

        <% }) %>
      <% } else { %>
        <p>No Items Found.</p>
      <% } %>

    </div>


</div>
