<div class="container pt-3">
  <h3 class="pb-4 mt-5 heading-white-bg fw-bold"><%= pageHeading %></h3>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb mt-2">
      <li class="breadcrumb-item"><a href="/explore">Explore</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= activeBreadcrumb %></li>
    </ol>
  </nav>

  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-2 g-lg-3 mb-4 py-4">

    <% if (posts != "") { %>
      <% posts.forEach(function(post, index) { %>

        <a href="/posts/<%= post.id %>" class="col text-center category-link recipe-title-directory">
          <div class="explore-img latest-img">
            <img src="/uploads/<%= post.img %>" onerror="this.onerror=null; this.src='/uploads/flame header.png';" alt="<%- post.title %>" loading="lazy">
          </div>
          <div class="pt-1"><%= post.title %></div>
        </a>

      <% }) %>
    <% } else { %>
      <p>No Items Found.</p>
    <% } %>

  </div>

  <div class="py-5">
    <%- include("partials/pagination"); -%>
  </div>

</div>
