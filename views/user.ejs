<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto mb-5">
      <div class="header-img col-12">
        <img src="/uploads/<%=viewedUser.headerPicture %>" class="img-fluid header-img" alt="<%= viewedUser.username %>" loading="lazy">
      </div>

      <div class="row">
        <div class="col-8">
          <div class="profile-picture">
            <img src="/uploads/<%=viewedUser.profilePicture %>" class="img-fluid profile-picture" alt="<%= viewedUser.username %>" loading="lazy">
          </div>
        </div>
        <div class="col-4 d-flex justify-content-end pt-4 pe-5">
          <form class="" action="/users/<%= viewedUser._id %>/follow" method="post">
            <button class="btn btn-lg btn-primary follow-btn" type="submit" name="button">Follow</button>
          </form>
        </div>
      </div>

      <div class="ms-5">
        <h1 class="col-12"> <%= viewedUser.username %> </h1>
        <p class="col-12"> <%= viewedUser.desc %> </p>
      </div>



      <div class="row py-4">

        <% if(posts != "") { %>
        <% posts.forEach(function(post, index) { %>

          <div class="py-3 col-11 mx-auto border-top border-light-subtle ">
            <div class="d-flex">


            <a href="/posts/<%= post.id %>" class="profile-post-img col-2 me-3">
              <img src="/uploads/<%= post.img %>" alt="<%= post.title %>" loading="lazy">
            </a>

            <div class="row col-12">
              <h4><a href="/posts/<%= post.id %>" class="profile-title"><%= post.title %></a></h4>
              <p><%= post.desc %></p>
              <div class="row col-12">
                <div class="row col-4">
                  <a href="/categories/<%= post.category %>" class="profile-link"><i class="fa-solid fa-tag profile-icon-color me-2"></i><%= post.category %></a>
                </div>
                <div class="row col-4">
                  <p><i class="fa-regular fa-clock profile-icon-color me-2"></i><%= post.totalMins %> Minutes</p>
                </div>
                <div class="row col-2">
                  <a href="/posts/<%= post.id %>/like" class="profile-link"><i class="fa-regular fa-heart profile-icon-color me-2"></i><%= post.likes.length %></a>
                </div>
                <div class="row col-2">
                  <a href="/posts/<%= post.id %>/save" class="profile-link"><i class="fa-regular fa-bookmark profile-icon-color me-2"></i></a>
                </div>
              </div>
            </div>
            </div>
          </div>





        <% }) %>
        <% } else { %>
          <div class="row">
            <div class="py-3 mx-auto col-11 text-center border-top border-light-subtle">
              <p>No posts yet!</p>
            </div>
          </div>

        <% } %>




      </div>
    </div>






  </div>
</div>
