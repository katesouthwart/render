<div class="container mt-5">

  <div class="container my-5">
  	<div class="row">
          <div class="col-md-8 mx-auto mt-5">
              <div id="custom-search-input">
                  <div class="input-group col-md-12">
                    <form class="d-flex w-100" action="/explore/search" method="get">
                      <input type="search" name="searchTerm" class="form-control input-lg" placeholder="Search..." aria-label="Search"/>
                      <span class="input-group-btn">
                          <button class="btn btn-info btn-lg" type="submit">
                              <i class="fas fa-search"></i>
                          </button>
                      </span>
                    </form>

                  </div>
              </div>
          </div>
  	</div>
  </div>

  <!-- Explore latest and Random Recipe buttons -->
  <div class="col-12 mt-5 text-center">
    <a href="/explore/latest" class="btn btn-primary btn-dark form-submit-btn px-4 me-md-2">Explore Latest</a>
    <a href="/explore/random" class="btn btn-info form-add-btn px-4 me-md-2">Random Recipe</a>
  </div>


  <!-- Categories -->
  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-2 g-lg-3 py-4 my-5">

    <% if(categories != "") {%>
    <% categories.forEach(function(category, index) { %>

      <a href="../categories/<%= category.name %>" class="col text-center category-link">
        <div class="category-icon">
          <i class="<%= category.icon %> fa-4x features-icon"></i>
        </div>
        <div>
          <h6  class="pt-1 fw-bold"><%= category.name %></h6>
        </div>
      </a>

  <%  }) %>
  <% } %>

    <a href="/categories" class="col text-center category-link">
      <div class="category-icon">
        <i class="fas fa-4x features-icon fa-ellipsis"></i>
      </div>
      <div>
        <h6 class="pt-1 fw-bold">View All</h6>
      </div>
    </a>


  </div>

  <!-- Quick Recipes -->
  <section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-end">
      <h3 class="heading-white-bg fw-bold">Thirty Minutes or Less</h3>
      <a href="/explore/ThirtyMinutesOrLess" class="ms-auto category-link fw-bold"><h6>View More</h6></a>
    </div>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-2 g-lg-3">

      <% if (food.thirtyMinsOrLess != "") { %>
        <% food.thirtyMinsOrLess.forEach(function(recipe, index){ %>

          <a href="/posts/<%= recipe._id %>" class="col text-center category-link recipe-title-directory">
            <div class="explore-img latest-img">
              <img src="/uploads/<%= recipe.img %>" alt="<%= recipe.title %>" onerror="this.onerror=null; this.src='/uploads/flame header.png';" loading="lazy">
            </div>
          <div class="pt-1"><%= recipe.title %></div>
          </a>

        <% }) %>
      <% } else { %>
        <p>No Items Found.</p>
      <% } %>

    </div>


  </section>

  <!-- Latest Recipes -->
  <section class="pb-4 pt-4 mb-5">
    <div class="d-flex mb-2 align-items-end">
      <h3 class="heading-white-bg fw-bold">Latest Recipes</h3>
      <a href="/explore/latest" class="ms-auto category-link fw-bold"><h6>View More</h6></a>
    </div>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-2 g-lg-3">

      <% if (food != "") { %>
        <% food.latest.forEach(function(recipe, index){ %>

          <a href="/posts/<%= recipe._id %>" class="col text-center category-link  recipe-title-directory">
            <div class="explore-img latest-img">
              <img src="/uploads/<%= recipe.img %>" alt="<%= recipe.title %>" onerror="this.onerror=null; this.src='/uploads/flame header.png';" loading="lazy">
            </div>
          <div class="pt-1"><%= recipe.title %></div>
          </a>

        <% }) %>
      <% } else { %>
        <p>No Items Found.</p>
      <% } %>

    </div>


  </section>

</div>
